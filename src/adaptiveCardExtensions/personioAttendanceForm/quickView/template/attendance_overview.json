{
    "type": "AdaptiveCard",
    "version": "1.3",
    "actions": [
        {
            "type": "Action.ShowCard",
            "title": "Delete attendance",
            "card": {
              "type": "AdaptiveCard",
              "version": "1.3",
              "body": [
                {
                  "type": "ColumnSet",
                  "columns": [
                    {
                      "type": "Column",
                      "verticalContentAlignment": "center",
                      "items": [
                        {
                          "type": "TextBlock",
                          "text": "Choose the ID"
                        }
                      ]
                    },
                    {
                      "type": "Column",
                      "items": [
                        {
                          "type": "Input.ChoiceSet",
                          "id": "id",
                          "choices": [
                            {
                              "$data": "${attendances}",
                              "title": "${id}",
                              "value": "${id}"
                            }
                          ]
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "ActionSet",
                  "actions": [
                    {
                      "type": "Action.Submit",
                      "id": "deleteAttendanceButton",
                      "title": "Confirm"
                    }
                  ]
                }
              ]
            }
        },
        {
            "type": "Action.Submit",
            "title": "Back",
            "id": "back"
        }
    ],
    "body": [
        {
            "type": "TextBlock",
            "text": "Since ${dates.today_date} till now",
            "horizontalAlignment": "center",
            "wrap": true
        },
        {
            "$data": "${attendances}",
            "type": "Container",
            "separator": true,
            "items": [
                {
                    "type": "TextBlock",
                    "text": "${id}",
                    "horizontalAlignment": "center",
                    "size": "small",
                    "isSubtle": true
                },
                {
                    "type": "TextBlock",
                    "text": "${date}",
                    "horizontalAlignment": "center",
                    "size": "medium",
                    "spacing": "none"
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "horizontalAlignment": "center",
                                    "text": "Since",
                                    "isSubtle": true,
                                    "size": "small"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "${start_time}",
                                    "horizontalAlignment": "center",
                                    "spacing": "none"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "horizontalAlignment": "center",
                                    "text": "To",
                                    "isSubtle": true,
                                    "size": "small"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "${end_time}",
                                    "horizontalAlignment": "center",
                                    "spacing": "none"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "TextBlock",
                    "text": "Break: ${break} minutes",
                    "horizontalAlignment": "center",
                    "size": "small"
                },
                {
                    "type": "TextBlock",
                    "text": "Project",
                    "horizontalAlignment": "center",
                    "isSubtle": true,
                    "$when": "${project_name != ''}"
                },
                {
                    "type": "TextBlock",
                    "text": "${project_name}",
                    "horizontalAlignment": "center",
                    "spacing": "none"
                },
                {
                    "type": "TextBlock",
                    "text": "Comment",
                    "horizontalAlignment": "center",
                    "isSubtle": true,
                    "$when": "${comment != ''}"
                },
                {
                    "type": "TextBlock",
                    "text": "${comment}",
                    "horizontalAlignment": "center",
                    "spacing": "none"
                }
            ]
        }
    ]
}