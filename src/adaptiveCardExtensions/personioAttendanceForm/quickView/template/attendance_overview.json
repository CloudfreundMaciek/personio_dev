{
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
          "type": "Container",
          "style": "emphasis",
          "height": "auto",
          "items": [
            {
              "type": "TextBlock",
              "text": "Attendance overview",
              "horizontalAlignment": "center",
              "weight": "bolder",
              "height": "auto",
              "size": "medium"
            },
            {
              "type": "TextBlock",
              "text": "Since ${dates.week_ago_date} till now",
              "horizontalAlignment": "center",
              "wrap": true,
              "spacing": "none",
              "size": "small"
            }
          ]
        },
        {
            "$data": "${attendances}",
            "type": "Container",
            "spacing": "medium",
            "style": "emphasis",
            "items": [
              {
                "type": "Container",
                "style": "accent",
                "items": [
                  {
                      "type": "TextBlock",
                      "text": "${id}",
                      "horizontalAlignment": "center",
                      "size": "small",
                      "isSubtle": true,
                      "fontType": "monospace"
                  },
                  {
                      "type": "TextBlock",
                      "text": "${date}",
                      "horizontalAlignment": "center",
                      "size": "medium",
                      "spacing": "none",
                      "weight": "bolder",
                      "color": "accent"
                  },
                  {
                      "type": "ColumnSet",
                      "columns": [
                          {
                              "type": "Column",
                              "items": [
                                  {
                                      "type": "TextBlock",
                                      "horizontalAlignment": "center",
                                      "text": "Since",
                                      "isSubtle": true,
                                      "size": "small"
                                  },
                                  {
                                      "type": "TextBlock",
                                      "text": "${start_time}",
                                      "horizontalAlignment": "center",
                                      "spacing": "none",
                                      "weight": "bolder"
                                  }
                              ]
                          },
                          {
                              "type": "Column",
                              "items": [
                                  {
                                      "type": "TextBlock",
                                      "horizontalAlignment": "center",
                                      "text": "To",
                                      "isSubtle": true,
                                      "size": "small"
                                  },
                                  {
                                      "type": "TextBlock",
                                      "text": "${end_time}",
                                      "horizontalAlignment": "center",
                                      "spacing": "none",
                                      "weight": "bolder"
                                  }
                              ]
                          }
                      ]
                  },
                  {
                      "type": "TextBlock",
                      "text": "Break: ${break} minutes",
                      "horizontalAlignment": "center",
                      "size": "small"
                  }
                ]
              },
              {
                "type": "Container",
                "style": "accent",
                "$when": "${project_name != '' || comment != ''}",
                "items": [
                  {
                    "type": "ColumnSet",
                    "columns": [
                      {
                        "type": "Column",
                        "items": [
                          {
                            "type": "TextBlock",
                            "text": "Project",
                            "isSubtle": true,
                            "$when": "${project_name != ''}"
                          },
                          {
                            "type": "TextBlock",
                            "text": "Comment",
                            "isSubtle": true,
                            "$when": "${comment != ''}"
                          }                          
                        ]
                      },
                      {
                        "type": "Column",
                        "items": [
                          {
                            "type": "TextBlock",
                            "text": "${project_name}",
                            "horizontalAlignment": "right"
                          },
                          {
                            "type": "TextBlock",
                            "text": "${comment}",
                            "horizontalAlignment": "right"
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "ActionSet",
                  "actions": [
                    {
                      "type": "Action.ShowCard",
                      "style": "destructive",
                      "title": "Delete attendance",
                      "card": {
                        "type": "AdaptiveCard",
                        "version": "1.3",
                        "body": [
                          {
                            "type": "ColumnSet",
                            "columns": [
                              {
                                "type": "Column",
                                "width": "auto",
                                "verticalContentAlignment": "center",
                                "items": [
                                  {
                                    "type": "TextBlock",
                                    "text": "Choose the ID"
                                  }
                                ]
                              },
                              {
                                "type": "Column",
                                "items": [
                                  {
                                    "type": "Input.ChoiceSet",
                                    "id": "id",
                                    "choices": [
                                      {
                                        "$data": "${attendances}",
                                        "title": "${id}",
                                        "value": "${id}"
                                      }
                                    ]
                                  }
                                ]
                              }
                            ]
                          },
                          {
                            "type": "ActionSet",
                            "actions": [
                              {
                                "type": "Action.Submit",
                                "id": "deleteAttendanceButton",
                                "title": "Confirm"
                              }
                            ]
                          }
                        ]
                      }
                  }
                  ]
                }
              ]
            },
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "ActionSet",
                  "actions": [
                    {
                      "type": "Action.Submit",
                      "title": "Back",
                      "id": "attendanceMenuButton"
                    }
                  ]
                }
              ]
            }
          ]
        }
    ]
}