{
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "Container",
            "style": "emphasis",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "${strings.Absence.Menu.Header}",
                    "horizontalAlignment": "center",
                    "weight": "bolder",
                    "size": "medium"
                }
            ]
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "style": "positive",
                                    "id": "absenceFormMenuButton",
                                    "title": "${strings.Absence.Menu.Buttons.Form}"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "style": "positive",
                                    "id": "absenceOverviewMenuButton",
                                    "title": "${strings.Absence.Menu.Buttons.Overview}"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "id": "menu",
            "title": "${strings.Absence.Menu.Buttons.Back}"
        }
    ]
}