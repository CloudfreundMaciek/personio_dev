{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "Container",
      "style": "warning",
      "items": [
        {
          "type": "TextBlock",
          "text": "${message}",
          "wrap": true
        }
      ]
    },
    {
        "type": "ActionSet",
        "actions": [
            {
                "type": "Action.Submit",
                "title": "${strings.Response.Back}",
                "id": "menu"
            }
        ]
    }
  ]
}