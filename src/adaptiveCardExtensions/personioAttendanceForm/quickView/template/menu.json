{
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "ColumnSet",
            "style": "emphasis",
            "columns": [
                {
                    "type": "Column",
                    "width": "80px",
                    "items": [
                        {
                            "type": "Image",
                            "url": "${icons.attendance}"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "verticalContentAlignment": "center",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${strings.Menu.Buttons.Attendance}",
                            "horizontalAlignment": "center",
                            "weight": "bolder",
                            "size": "medium"
                        }
                    ]
                }
            ],
            "selectAction": {
                "type": "Action.Submit",
                "title": "${strings.Menu.Buttons.Attendance}",
                "id": "attendanceMenuButton"
            }
        },
        {
            "type": "ColumnSet",
            "style": "emphasis",
            "columns": [
                {
                    "type": "Column",
                    "width": "80px",
                    "items": [
                        {
                            "type": "Image",
                            "url": "${icons.absence}"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "verticalContentAlignment": "center",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${strings.Menu.Buttons.Absence}",
                            "horizontalAlignment": "center",
                            "weight": "bolder",
                            "size": "medium"
                        }
                    ]
                }
            ],
            "selectAction": {
                "type": "Action.Submit",
                "title": "${strings.Menu.Buttons.Absence}",
                "id": "absenceMenuButton"
            }
        },
        {
            "type": "ColumnSet",
            "style": "emphasis",
            "columns": [
                {
                    "type": "Column",
                    "width": "80px",
                    "items": [
                        {
                            "type": "Image",
                            "url": "${icons.project}"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "verticalContentAlignment": "center",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${strings.Menu.Buttons.Projects}",
                            "horizontalAlignment": "center",
                            "weight": "bolder",
                            "size": "medium"
                        }
                    ]
                }
            ],
            "selectAction": {
                "type": "Action.Submit",
                "title": "${strings.Menu.Buttons.Projects}",
                "id": "projectsMenuButton"
            }
        }
    ]
}