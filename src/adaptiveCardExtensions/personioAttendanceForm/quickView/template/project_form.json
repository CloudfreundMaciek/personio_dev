{
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "Container",
            "style": "emphasis",
            "height": "auto",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Project form",
                    "horizontalAlignment": "center",
                    "weight": "bolder",
                    "height": "auto"
                }
            ]
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Title",
                            "weight": "bolder"
                        },
                        {
                            "type": "Input.Text",
                            "spacing": "none",
                            "id": "name"
                        }
                    ]
                }
            ]
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                      "type": "Action.Submit",
                                      "title": "Create a project",
                                      "id": "createProjectButton",
                                      "style": "positive",
                                      "data": {
                                        "active": true
                                      }
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                      "type": "Action.Submit",
                                      "id": "projectsMenuButton",
                                      "title": "Back"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}