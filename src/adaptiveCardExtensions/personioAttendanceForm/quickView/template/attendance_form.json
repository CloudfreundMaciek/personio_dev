{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
      {
          "type": "Input.Date",
          "label": "Day",
          "value": "${today}",
          "id": "day"
      },
      {
          "type": "ColumnSet",
          "columns": [
              {
                  "type": "Column",
                  "items": [
                      {
                          "type": "Input.Time",
                          "label": "Start",
                          "id": "start"
                      }
                  ]
              },
              {
                  "type": "Column",
                  "items": [
                      {
                          "type": "Input.Time",
                          "label": "End",
                          "id": "end"
                      }
                  ]
              },
              {
                "type": "Column",
                "items": [
                  {
                      "type": "Input.Number",
                      "label": "Break length",
                      "id": "break",
                      "value": 0
                  }
                ]
              }
          ]
      },
      {
          "type": "Input.ChoiceSet",
          "label": "Project",
          "id": "project",
          "choices": [
            {
              "$data": "${projects}",
              "title": "${name}",
              "value": "${id}"
            }
          ]
      },
      {
          "type": "Input.Text",
          "label": "Comment",
          "id": "comment",
          "value": ""
      },
      {
          "type": "ActionSet",
          "spacing": "large",
          "actions": [
              {
                    "type": "Action.Submit",
                    "title": "Submit",
                    "id": "submit"
              },
              {
                    "type": "Action.Submit",
                    "id": "back",
                    "title": "Back"
              }
          ]
      }
  ]
}