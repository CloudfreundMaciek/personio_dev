{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "Container",
            "style": "emphasis",
            "height": "auto",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Attendance form",
                    "horizontalAlignment": "center",
                    "weight": "bolder",
                    "height": "auto"
                }
            ]
        },
        {
            "type": "Container",
            "style": "warning",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Required",
                    "isSubtle": true,
                    "size": "small"
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Date",
                                    "weight": "bolder"
                                },
                                {
                                    "type": "Input.Date",
                                    "value": "${dates.today_date}",
                                    "id": "day",
                                    "spacing": "none"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Start",
                                    "weight": "bolder"
                                },
                                {
                                    "type": "Input.Time",
                                    "id": "start",
                                    "spacing": "none"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "End",
                                    "weight": "bolder"
                                },
                                {
                                    "type": "Input.Time",
                                    "id": "end",
                                    "spacing": "none"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "style": "accent",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                          "type": "Column",
                          "width": "1",
                          "items": [
                            {
                                "type": "Input.Number",
                                "label": "Break length",
                                "id": "break",
                                "value": 0
                            }
                          ]
                        },
                        {
                          "type": "Column",
                          "width": "2",
                          "items": [
                            {
                                "type": "Input.ChoiceSet",
                                "label": "Project",
                                "id": "project",
                                "choices": [
                                    {
                                        "$data": "${projects}",
                                        "$when": "${active == true}",
                                        "title": "${name}",
                                        "value": "${id}"
                                    }
                                  ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "style": "accent",
            "items": [
                {
                    "type": "Input.Text",
                    "label": "Comment",
                    "id": "comment",
                    "value": ""
                }
            ]
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                      "type": "Action.Submit",
                                      "title": "Submit",
                                      "id": "submit",
                                      "style": "positive"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                      "type": "Action.Submit",
                                      "id": "attendanceMenuButton",
                                      "title": "Back"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}