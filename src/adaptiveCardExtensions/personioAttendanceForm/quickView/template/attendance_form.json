{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "Container",
            "style": "emphasis",
            "height": "auto",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Attendance form",
                    "horizontalAlignment": "center",
                    "weight": "bolder",
                    "height": "auto"
                }
            ]
        },
        {
            "type": "Container",
            "style": "accent",
            "items": [
                {
                    "type": "Input.Date",
                    "label": "Day",
                    "value": "${dates.today_date}",
                    "id": "day"
                }
            ]
        },
        {
            "type": "Container",
            "style": "accent",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "Input.Time",
                                    "label": "Start",
                                    "id": "start"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "Input.Time",
                                    "label": "End",
                                    "id": "end"
                                }
                            ]
                        },
                        {
                          "type": "Column",
                          "items": [
                            {
                                "type": "Input.Number",
                                "label": "Break length",
                                "id": "break",
                                "value": 0
                            }
                          ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "style": "accent",
            "items": [
                {
                    "type": "Input.ChoiceSet",
                    "label": "Project",
                    "id": "project",
                    "choices": [
                      {
                        "$data": "${projects}",
                        "$when": "${active == true}",
                        "title": "${name}",
                        "value": "${id}"
                      }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "style": "accent",
            "items": [
                {
                    "type": "Input.Text",
                    "label": "Comment",
                    "id": "comment",
                    "value": ""
                }
            ]
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "ActionSet",
                            "spacing": "large",
                            "actions": [
                                {
                                      "type": "Action.Submit",
                                      "title": "Submit",
                                      "id": "submit",
                                      "style": "positive"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "ActionSet",
                            "spacing": "large",
                            "actions": [
                                {
                                      "type": "Action.Submit",
                                      "id": "attendanceMenuButton",
                                      "title": "Back"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    
    ]
}