{
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "Container",
        "style": "emphasis",
        "height": "auto",
        "items": [
            {
                "type": "TextBlock",
                "text": "Project overview",
                "horizontalAlignment": "center",
                "weight": "bolder",
                "height": "auto"
            }
        ]
      },
        {
            "type": "ColumnSet",
            "$data": "${projects}",
            "separator": true,
            "horizontalAlignment": "center",
            "columns": [
              {
                "type": "Column",
                "width": "auto",
                "style": "accent",
                "items": [
                  {
                      "type": "TextBlock",
                      "text": "${name}",
                      "size": "medium",
                      "horizontalAlignment": "center"
                  }
                ]
              }
            ]
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                              {
                                "type": "Action.ShowCard",
                                "title": "Finish project",
                                "style": "destructive",
                                "card": {
                                  "type": "AdaptiveCard",
                                  "body": [
                                    {
                                      "type": "ColumnSet",
                                      "columns": [
                                        {
                                          "type": "Column",
                                          "width": "auto",
                                          "verticalContentAlignment": "Center",
                                          "items": [
                                            {
                                              "type": "TextBlock",
                                              "text": "Choose the project"
                                            }
                                          ]
                                        },
                                        {
                                          "type": "Column",
                                          "items": [
                                            {
                                              "type": "Input.ChoiceSet",
                                              "id": "id",
                                              "choices": [
                                                {
                                                  "$when": "${active == true}",
                                                  "$data": "${projects}",
                                                  "title": "${name}",
                                                  "value": "${id}"
                                                }
                                              ]
                                            }
                                          ]
                                        }
                                      ]
                                    },
                                    {
                                      "type": "ActionSet",
                                      "actions": [
                                        {
                                          "type": "Action.Submit",
                                          "id": "metaProjectButton",
                                          "title": "Confirm",
                                          "style": "destructive"
                                        }
                                      ]
                                    }
                                  ]
                                }
                              }
                            ]
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                      "type": "Action.Submit",
                                      "id": "projectMenuButton",
                                      "title": "Back"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}