{
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "Container",
            "$data": "${projects}",
            "$when": "${active == true}",
            "separator": true,
            "items": [
                {
                    "type": "TextBlock",
                    "text": "${name}",
                    "size": "medium",
                    "horizontalAlignment": "center"
                }
            ]
        },
        {
          "type": "ActionSet",
          "actions": [
            {
                "type": "Action.ShowCard",
                "title": "Finish project",
                "card": {
                  "type": "AdaptiveCard",
                  "body": [
                    {
                      "type": "ColumnSet",
                      "columns": [
                        {
                          "type": "Column",
                          "verticalContentAlignment": "Center",
                          "items": [
                            {
                              "type": "TextBlock",
                              "text": "Choose the project"
                            }
                          ]
                        },
                        {
                          "type": "Column",
                          "items": [
                            {
                              "type": "Input.ChoiceSet",
                              "id": "id",
                              "choices": [
                                {
                                  "$when": "${active == true}",
                                  "$data": "${projects}",
                                  "title": "${name}",
                                  "value": "${id}"
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "ActionSet",
                      "actions": [
                        {
                          "type": "Action.Submit",
                          "id": "metaProjectButton",
                          "title": "Confirm"
                        }
                      ]
                    }
                  ]
                }
            },
            {
                "type": "Action.Submit",
                "id": "projectMenuButton",
                "title": "Back"
            }
          ]    
        }
    ]
}