{
  "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "Container",
        "style": "emphasis",
        "items": [
          {
            "type": "TextBlock",
            "text": "${strings.Absence.Form.Header}",
            "weight": "bolder",
            "horizontalAlignment": "center"
          },
          {
            "type": "TextBlock",
            "text": "${strings.Absence.Form.LeftDays[0]} ${absenceCount}/${absenceLimit} ${strings.Absence.Form.LeftDays[1]}",
            "horizontalAlignment": "center",
            "isSubtle": true,
            "size": "small"
          }
        ]
      },
      {
        "type": "Container",
        "style": "warning",
        "items": [
          {
            "type": "TextBlock",
            "text": "${strings.Absence.Form.Required}",
            "isSubtle": true,
            "size": "small"
          },
          {
            "type": "TextBlock",
            "text": "${strings.Absence.Form.Fields.AbsenceType}",
            "weight": "bolder"
          },
          {
            "type": "Input.ChoiceSet",
            "id": "time_off_type_id",
            "spacing": "none",
            "seperator": true,
            "choices": [
              {
                "$data": "${timeOffTypes}",
                "title": "${name}",
                "value": "${id}"
              }
            ]
          },
          {
            "type": "ColumnSet",
            "columns": [
              {
                "type": "Column",
                "width": "stretch",
                "items": [
                  {
                    "type": "TextBlock",
                    "text": "${strings.Absence.Form.Fields.Start}",
                    "weight": "bolder"
                  },
                  {
                    "type": "Input.Date",
                    "spacing": "none",
                    "id": "start_date"
                  },
                  {
                    "type": "TextBlock",
                    "text": "${strings.Absence.Form.Fields.End}",
                    "weight": "bolder"
                  },
                  {
                    "type": "Input.Date",
                    "spacing": "none",
                    "id": "end_date"
                  }
                ]
              },
              {
                "type": "Column",
                "width": "auto",
                "items": [
                  {
                    "type": "TextBlock",
                    "text": "${strings.Absence.Form.Fields.HalfStart}",
                    "horizontalAlignment": "right"
                  },
                  {
                    "type": "Input.Toggle",
                    "id": "half_day_start",
                    "spacing": "small"
                  },
                  {
                    "type": "TextBlock",
                    "text": "${strings.Absence.Form.Fields.HalfEnd}",
                    "horizontalAlignment": "right",
                    "spacing": "medium"
                  },
                  {
                    "type": "Input.Toggle",
                    "id": "half_day_end",
                    "spacing": "small"
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "type": "Container",
        "style": "accent",
        "items": [
          {
            "type": "Input.Text",
            "label": "${strings.Absence.Form.Fields.Comment}",
            "id": "comment"
          }
        ]
      },
      {
        "type": "ColumnSet",
        "columns": [
          {
            "type": "Column",
            "items": [
              {
                "type": "ActionSet",
                "actions": [
                  {
                    "type": "Action.Submit",
                    "title": "${strings.Absence.Form.Buttons.Submit}",
                    "id": "takeTimeOffButton",
                    "style": "positive"
                  }
                ]
              }
            ]
          },
          {
            "type": "Column",
            "width": "auto",
            "items": [
              {
                "type": "ActionSet",
                "actions": [
                  {
                    "type": "Action.Submit",
                    "title": "${strings.Absence.Form.Buttons.Back}",
                    "id": "absenceMenuButton"
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }