{
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "TextBlock",
        "text": "You've got ${absenceCount}/${absenceLimit} of your holidays days.",
        "horizontalAlignment": "center",
        "isSubtle": true,
        "size": "small"
      },
      {
        "type": "Input.ChoiceSet",
        "label": "Absence's purpose",
        "id": "time_off_type_id",
        "seperator": true,
        "choices": [
          {
            "$data": "${timeOffTypes}",
            "title": "${name}",
            "value": "${id}"
          }
        ]
      },
      {
        "type": "ColumnSet",
        "columns": [
          {
            "type": "Column",
            "items": [
              {
                "type": "Input.Date",
                "label": "Start",
                "id": "start_date"
              },
              {
                "type": "Input.Toggle",
                "label": "Half-day start",
                "id": "half_day_start"
              }
            ]
          },
          {
            "type": "Column",
            "items": [
              {
                "type": "Input.Date",
                "label": "End",
                "id": "end_date"
              },
              {
                "type": "Input.Toggle",
                "label": "Half-day end",
                "id": "half_day_end"
              }
            ]
          }
        ]
      },
      {
        "type": "Input.Text",
        "label": "Comment",
        "id": "comment"
      },
      {
        "type": "ActionSet",
        "spacing": "large",
        "actions": [
          {
            "type": "Action.Submit",
            "title": "Submit time-off",
            "id": "takeTimeOffButton"
          },
          {
            "type": "Action.Submit",
            "id": "back",
            "title": "Back"
          }
        ]
      }
    ]
  }