{
  "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "Container",
      "style": "emphasis",
      "items": [
        {
          "type": "TextBlock",
          "text": "${strings.Absence.Overview.Header}",
          "weight": "bolder",
          "horizontalAlignment": "center"
        },
        {
          "type": "TextBlock",
          "text": "${strings.Absence.Overview.LeftDays[0]} ${absenceCount}/${absenceLimit} ${strings.Absence.Overview.LeftDays[1]}",
          "horizontalAlignment": "center",
          "isSubtle": true,
          "size": "small",
          "spacing": "none"
        }
      ]
    },
    {
      "type": "Container",
      "$data": "${absences}",
      "spacing": "medium",
      "style": "${if(status == 'requested', 'warning', 'accent')}",
      "items": [
        {
          "type": "TextBlock",
          "text": "${id}",
          "size": "small",
          "isSubtle": true,
          "fontType": "monospace",
          "horizontalAlignment": "center"
        },
        {
          "type": "TextBlock",
          "text": "${time_off_type_name}",
          "horizontalAlignment": "center",
          "spacing": "none"
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${$root.strings.Absence.Overview.Absence.Start}",
                  "horizontalAlignment": "center",
                  "color": "good"
                },
                {
                  "type": "TextBlock",
                  "text": "${start_date}",
                  "horizontalAlignment": "center",
                  "spacing": "small",
                  "size": "medium",
                  "weight": "bolder"
                }
              ]
            },
            {
              "type": "Column",
              "separator": true,
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${$root.strings.Absence.Overview.Absence.End}",
                  "horizontalAlignment": "center",
                  "color": "attention"
                },
                {
                  "type": "TextBlock",
                  "text": "${end_date}",
                  "horizontalAlignment": "center",
                  "spacing": "small",
                  "size": "medium",
                  "weight": "bolder"
                }
              ]
            }
          ]
        },
        {
          "type": "TextBlock",
          "text": "${$root.strings.Absence.Overview.Absence.Status} ${status}",
          "horizontalAlignment": "center",
          "size": "small"
        },
        {
          "type": "TextBlock",
          "text": "${comment}",
          "$when": "${comment != 'undefined'}",
          "horizontalAlignment": "center",
          "isSubtle": true
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "ActionSet",
              "spacing": "large",
              "actions": [
                {
                  "type": "Action.ShowCard",
                  "title": "${strings.Absence.Overview.Buttons.Cancel.Title}",
                  "style": "destructive",
                  "card": {
                    "type": "AdaptiveCard",
                    "version": "1.3",
                    "body": [
                      {
                        "type": "ColumnSet",
                        "columns": [
                          {
                            "type": "Column",
                            "width": "auto",
                            "verticalContentAlignment": "center",
                            "items": [
                              {
                                "type": "TextBlock",
                                "text": "${strings.Absence.Overview.Buttons.Cancel.Card.Choice}"
                              }
                            ]
                          },
                          {
                            "type": "Column",
                            "items": [
                              {
                                "type": "Input.ChoiceSet",
                                "id": "id",
                                "choices": [
                                  {
                                    "$data": "${absences}",
                                    "title": "${id}",
                                    "value": "${id}"
                                  }
                                ]
                              }
                            ]
                          }
                        ]
                      },
                      {
                        "type": "ActionSet",
                        "actions": [
                          {
                            "type": "Action.Submit",
                            "id": "callOffAbsenceButton",
                            "style": "destructive",
                            "title": "${strings.Absence.Overview.Buttons.Cancel.Card.Confirm}"
                          }
                        ]
                      }
                    ]
                  }
                }
              ]
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "id": "absenceMenuButton",
                  "title": "${strings.Absence.Overview.Buttons.Back}"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}