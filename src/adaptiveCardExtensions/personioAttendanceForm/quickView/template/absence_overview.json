{
  "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "TextBlock",
      "text": "You've got ${absenceCount}/${absenceLimit} of your holidays days.",
      "horizontalAlignment": "center",
      "isSubtle": true,
      "size": "small"
    },
    {
      "type": "Container",
      "$data": "${absences}",
      "separator": true,
      "items": [
        {
          "type": "TextBlock",
          "text": "${id}",
          "weight": "bolder",
          "horizontalAlignment": "center"
        },
        {
          "type": "TextBlock",
          "text": "${time_off_type_name}",
          "isSubtle": true,
          "horizontalAlignment": "center",
          "size": "small",
          "spacing": "none"
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Start",
                  "horizontalAlignment": "center"
                },
                {
                  "type": "TextBlock",
                  "text": "${start_date}",
                  "horizontalAlignment": "center",
                  "spacing": "small",
                  "size": "medium"
                }
              ]
            },
            {
              "type": "Column",
              "separator": true,
              "items": [
                {
                  "type": "TextBlock",
                  "text": "End",
                  "horizontalAlignment": "center"
                },
                {
                  "type": "TextBlock",
                  "text": "${end_date}",
                  "horizontalAlignment": "center",
                  "spacing": "small",
                  "size": "medium"
                }
              ]
            }
          ]
        },
        {
          "type": "TextBlock",
          "text": "Status: ${status}",
          "horizontalAlignment": "center",
          "size": "small"
        },
        {
          "type": "TextBlock",
          "text": "${comment}",
          "$when": "${comment != 'undefined'}",
          "horizontalAlignment": "center",
          "isSubtle": true
        }
      ]
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.ShowCard",
          "title": "Cancel time off",
          "card": {
            "type": "AdaptiveCard",
            "body": [
              {
                "type": "ColumnSet",
                "columns": [
                  {
                    "type": "Column",
                    "verticalContentAlignment": "center",
                    "items": [
                      {
                        "type": "TextBlock",
                        "text": "Choose the ID"
                      }
                    ]
                  },
                  {
                    "type": "Column",
                    "items": [
                      {
                        "type": "Input.ChoiceSet",
                        "id": "id",
                        "choices": [
                          {
                            "$data": "${absences}",
                            "title": "${id}",
                            "value": "${id}"
                          }
                        ]
                      }
                    ]
                  }
                ]
              },
              {
                "type": "ActionSet",
                "actions": [
                  {
                    "type": "Action.Submit",
                    "id": "callOff",
                    "title": "Confirm"
                  }
                ]
              }
            ]
          }
        },
        {
          "type": "Action.Submit",
          "id": "back",
          "title": "Back"
        }
      ]
    }
  ]
}