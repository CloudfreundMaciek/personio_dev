{
  "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "Container",
      "style": "emphasis",
      "items": [
        {
          "type": "TextBlock",
          "text": "Absence overview",
          "weight": "bolder",
          "horizontalAlignment": "center"
        },
        {
          "type": "TextBlock",
          "text": "You've got ${absenceCount}/${absenceLimit} of your holidays days left.",
          "horizontalAlignment": "center",
          "isSubtle": true,
          "size": "small",
          "spacing": "none"
        }
      ]
    },
    {
      "type": "Container",
      "style": "warning",
      "items": [
        {
          "type": "TextBlock",
          "text": "${strings.Absence.Overview.Empty.Message}"
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "id": "absenceFormMenuButton",
                  "title": "${strings.Absence.Overview.Empty.Submit}",
                  "style": "positive"
                }
              ]
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "id": "absenceMenuButton",
                  "title": "${strings.Absence.Overview.Buttons.Back}"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}