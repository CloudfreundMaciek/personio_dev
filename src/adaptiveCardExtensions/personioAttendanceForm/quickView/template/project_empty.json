{
  "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "Container",
      "style": "emphasis",
      "height": "auto",
      "items": [
          {
              "type": "TextBlock",
              "text": "Project overview",
              "horizontalAlignment": "center",
              "weight": "bolder",
              "height": "auto"
          }
      ]
    },
    {
      "type": "Container",
      "style": "warning",
      "items": [
        {
          "type": "TextBlock",
          "text": "There is no project to work on..."
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "id": "createProjectButton",
                  "title": "Create a project",
                  "style": "positive"
                }
              ]
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "id": "projectMenuButton",
                  "title": "Back"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}