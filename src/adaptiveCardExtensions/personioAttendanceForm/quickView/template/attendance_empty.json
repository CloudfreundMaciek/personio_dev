{
  "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "Container",
      "style": "emphasis",
      "height": "auto",
      "items": [
        {
          "type": "TextBlock",
          "text": "Attendance overview",
          "horizontalAlignment": "center",
          "weight": "bolder",
          "height": "auto"
        },
        {
          "type": "TextBlock",
          "text": "Since ${dates.week_ago_date} till now",
          "horizontalAlignment": "center",
          "wrap": true,
          "spacing": "none",
          "size": "small"
        }
      ]
    },
    {
      "type": "Container",
      "style": "warning",
      "items": [
        {
          "type": "TextBlock",
          "text": "You haven't registered any attendances yet..."
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "id": "attendanceFormMenuButton",
                  "title": "Submit new attendance",
                  "style": "positive"
                }
              ]
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "title": "Back",
                  "id": "attendanceMenuButton"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}